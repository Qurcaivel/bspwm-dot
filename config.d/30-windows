#!/usr/bin/env bash

# Clear active window rules
bspc rule -r *:*

# Set pointer motion interval for floating windows drag & move better experience
bspc config pointer_motion_interval 5

## Floating apps
declare -a floating=(
    #Thunar 
    Pavucontrol 
    Blueman-manager 
    Nm-connection-editor 
    Xarchiver 
    GParted 
    firefox:Toolkit
    Rhythmbox
    ru-turikhay-tlauncher-bootstrap-Bootstrap
)

for i in ${floating[@]}; do
   bspc rule -a $i state=floating focus=on center=true; 
done

# TelegramDesktop preview mode
#bspc rule -a "TelegramDesktop:telegram-desktop" state=floating focus=on center=true rectangle=750x850+0+0
